@model Automobilistica.Models.Servicos

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Serviços</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.Label("Nome")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Srnome)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Descrição")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Srdescricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Valor")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Srvalor)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Status")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Srstatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Data de Cadastro")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Srdtcadastro)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Srcdservico" />
        <input type="submit" value="Delete" class="btn btn-danger" style="margin-right: 10px;" />
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
