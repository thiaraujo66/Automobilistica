@model Automobilistica.Models.CarroCliente

@{
    ViewData["Title"] = "Edit";
}

<h1>Alteração</h1>

<h4>Carro do Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cccdcarro" />
            <input type="hidden" asp-for="Cccdcliente" />
            <div class="form-group">
                <label asp-for="Ccdtcadastro" class="control-label">Data de Cadastro</label>
                <input asp-for="Ccdtcadastro" class="form-control" />
                <span asp-validation-for="Ccdtcadastro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ccstatus" class="control-label">Status</label>
                <select asp-for="Ccstatus" class="form-control">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
                <span asp-validation-for="Ccstatus" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <input type="submit" value="Save" class="btn btn-primary" style="margin-right: 10px;" />
                <a asp-action="Index" class="btn btn-danger">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
