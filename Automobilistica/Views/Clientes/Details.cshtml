@model Automobilistica.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.Label("Data de Cadastro")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cldtcadastro)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Data de alteração")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cldtalteracao)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("Status")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Clstatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.Label("CPF/CNPJ")
        </dt> 
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClcdpessoaNavigation.Pscgc)
        </dd>
        <dt class = "col-sm-2">
        </dt>
        <dd class = "col-sm-10">
            <img id="qrcode" src="@ViewBag.QRCodeImageSrc" alt="QR Code" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Clcdcliente">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
